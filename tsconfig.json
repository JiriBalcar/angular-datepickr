{
  "compilerOptions": {
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    // don't auto-discover @types/node, it results in a ///<reference in the .d.ts output
    "types": []
